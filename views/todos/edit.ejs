<% include ../partials/header.ejs %>
<div class="container" id="newFormContainer">
    <div class="row">
        <div class="col-6 offset-3 border rounded bg-white">
            <h3 class="my-3">Edit the Task</h3>
            <form action="/todos/<%=todo._id%>?_method=PUT" method="POST">
                <div class="form-group">
                    <label for="task">Task</label>
                    <input type="text" name="todo[task]" id="task" class="form-control" value="<%= todo.task %>" placeholder="Ex: Destroy the One Ring">
                </div>
                <div class="form-group">
                    <label for="deadline">Deadline</label>
                    <input type="date" name="todo[deadline]" id="task" class="form-control" value="<%= todo.deadline.toISOString().split('T')[0] %>" min="2019-08-30" max="3000-12-31">
                </div>
                <div class="form-group">
                    <label for="description">Description</label>
                    <textarea name="todo[description]" rows="4" id="description" class="form-control" placeholder="Throw it in  in the fires of Mount Doom."><%= todo.description %></textarea>
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-info btn-block">Submit</button>
                </div>
            </form>
        </div>
    </div>
</div>
<% include ../partials/footer.ejs %>